{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "installCommand": "npm install --legacy-peer-deps --no-optional",
        "buildCommand": "prisma generate && next build",
        "nodeVersion": ">=18.x"
      }
    }
  ],
  "build": {
    "env": {
      "NODE_VERSION": "18",
      "VERCEL_RUNTIME": "18.x"
    }
  }
}
